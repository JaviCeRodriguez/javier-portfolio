---
import MainLayout from "@/layouts/main.astro";
import Card from "@/components/card.astro";
import { useTranslations } from "@/i18n/utils";

const t = useTranslations("en");
---

<MainLayout>
  <h1 class="text-3xl font-bold mb-10">Javo ðŸ§‰</h1>
  <section class="space-y-4">
    <Card title={t("about.title") as string}>
      <p class="text-sm">
        {t("about.description")}
        <a
          href="https://www.incubator.com.ar/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-green-500 font-semibold">Incubator</a
        >.
      </p>
      <p class="text-sm">
        {t("about.content")}
      </p>
    </Card>

    <Card title={t("tech.title") as string}>
      <p class="text-sm">
        {t("tech.description")[0]}
        <span class="px-2 py-0.5 rounded bg-blue-600 text-white font-semibold"
          >React</span
        >
        {t("tech.description")[1]}
        <span class="px-2 py-0.5 rounded bg-blue-700 text-white font-semibold"
          >TypeScript</span
        >
        {t("tech.description")[2]}
        <span class="px-2 py-0.5 rounded bg-yellow-500 text-black font-semibold"
          >Python</span
        >.
      </p>
      <p class="text-sm">
        {t("tech.content")[0]}
        <span class="px-2 py-0.5 rounded bg-red-700 text-white font-semibold"
          >Nest.js</span
        >
        {t("tech.content")[1]}
        <span class="px-2 py-0.5 rounded bg-green-800 text-white font-semibold"
          >Django</span
        >.
      </p>
    </Card>

    <Card title={t("contact.title") as string}>
      <p class="text-sm">
        <a
          href="mailto:contacto@javo.com.ar"
          class="text-blue-500 font-semibold">contacto@javo.com.ar</a
        >
      </p>
      <p class="text-sm">
        {t("contact.description")[0]}
        <a
          href="https://github.com/JaviCeRodriguez"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold"
        >
          <span
            class="px-2 py-0.5 rounded bg-purple-700 text-white font-semibold"
            >GitHub</span
          >
        </a>
        , <a
          href="https://www.linkedin.com/in/rodriguezjavierc"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold"
        >
          <span class="px-2 py-0.5 rounded bg-blue-700 text-white font-semibold"
            >LinkedIn</span
          >
        </a>
        {t("contact.description")[1]}
        <a
          href="https://x.com/javicerodriguez"
          target="_blank"
          rel="noopener noreferrer"
          class="font-semibold"
        >
          <span
            class="px-2 py-0.5 rounded bg-slate-800 text-white font-semibold"
            >X</span
          >
        </a>
        .
      </p>
    </Card>
  </section>
</MainLayout>
