---
import MainLayout from "@/layouts/main.astro";
import { useTranslations } from "@/i18n/utils";
import { BookmarksList } from "@/components/ui/BookmarksList";
import type { BookmarkSection } from "@/components/ui/BookmarksList";
import { bookmarksData } from "@/lib/bookmarks";

const t = useTranslations("en");

const bookmarks: BookmarkSection[] = bookmarksData.map((cat) => ({
  category: t(cat.key as Parameters<typeof t>[0]) as string,
  links: cat.links,
}));
---

<MainLayout>
  <BookmarksList bookmarks={bookmarks} title={t("bookmarks.title") as string} />
</MainLayout>
