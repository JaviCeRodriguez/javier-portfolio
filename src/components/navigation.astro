---
import type { languages } from "@/i18n/config";
import { Navigation as NavigationComponent } from "./ui/navigation";

export interface Props {
  currentPath?: string;
  className?: string;
  currentLang: keyof typeof languages;
}

const { currentPath, className, currentLang } = Astro.props;
---

<NavigationComponent
  currentPath={currentPath}
  className={className}
  currentLang={currentLang}
  client:load
/>
