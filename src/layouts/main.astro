---
import "@/styles/global.css";
import { getLangFromUrl, getRouteFromUrl } from "@/i18n/utils";
import { LanguageSwitcher } from "@/components/ui/language-switcher";
import Navigation from "@/components/navigation.astro";

const currentLang = getLangFromUrl(Astro.url);
const currentRoute = getRouteFromUrl(Astro.url);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://avatars.githubusercontent.com/u/68615684?v=4"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Lead Frontend Developer. I do frontend mainly, but also a bit of backend and data analysis. Contact: contacto@javo.com.ar"
    />
    <meta property="og:title" content="Javo ðŸ§‰" />
    <meta
      property="og:description"
      content="Lead Frontend Developer. I do frontend mainly, but also a bit of backend and data analysis. Contact: contacto@javo.com.ar"
    />
    <meta
      property="og:image"
      content="https://avatars.githubusercontent.com/u/68615684?v=4"
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Javo ðŸ§‰" />
    <meta
      name="twitter:description"
      content="Lead Frontend Developer. I do frontend mainly, but also a bit of backend and data analysis. Contact: contacto@javo.com.ar"
    />
    <meta
      name="twitter:image"
      content="https://avatars.githubusercontent.com/u/68615684?v=4"
    />
    <link rel="canonical" href={Astro.url.href} />
    <title>Javo ðŸ§‰</title>
  </head>
  <body class="bg-neutral-900 text-white container max-w-5xl mx-auto p-4">
    <nav class="flex justify-between items-center mb-4">
      <Navigation currentPath={Astro.url.pathname} currentLang={currentLang} />
      <LanguageSwitcher
        client:load
        currentLang={currentLang}
        currentRoute={currentRoute}
      />
    </nav>

    <slot />
  </body>
</html>
